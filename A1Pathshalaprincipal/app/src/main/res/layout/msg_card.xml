<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_parent_messages" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_msg_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_weight="5"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:gravity="start"
                    android:text="Message"/>
                <com.mikepenz.iconics.view.IconicsTextView
                    android:id="@+id/tv_msg_sname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="5"
                    android:textColor="@color/colorAccent"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:text="Student Name"/>
                <com.mikepenz.iconics.view.IconicsTextView
                    android:id="@+id/itv_msg_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="5"
                    android:textColor="@color/colorAccent"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:text="Class"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorAccent"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/itv_msg_time"
                android:text="{faw-calendar} Time"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/itv_msg_tname"
                android:text="Posted By"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>