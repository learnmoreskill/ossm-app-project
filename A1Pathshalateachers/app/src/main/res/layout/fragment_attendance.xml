<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/tools">

        <ProgressBar
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:id="@+id/attendance_check_progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/attendance_start_placeholder_card"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        card_view:cardUseCompatPadding="true">
        <com.facebook.shimmer.ShimmerFrameLayout android:id="@+id/attendance_start_shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <View
            android:layout_width="200sp"
            android:layout_height="24sp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryAlpha"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="16sp"
            android:layout_margin="5dp"
            android:background="@color/colorAccentAlpha"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="16sp"
            android:layout_margin="5dp"
            android:background="@color/colorAccentAlpha"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="16sp"
            android:layout_margin="5dp"
            android:background="@color/colorAccentAlpha"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccentAlpha"/>
        <View
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccentAlpha"/>

    </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/attendance_start_card"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_attendace_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:padding="5dp"
                    android:layout_weight="5"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:text="Today's Attendance"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-school"/>


                    <Spinner
                        android:id="@+id/spinner_attendance_view_class1"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <ProgressBar
                    style="@style/Base.Widget.AppCompat.ProgressBar"
                    android:id="@+id/section_progress1"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-source-branch"/>


                    <Spinner
                        android:id="@+id/spinner_attendance_view_sec1"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <ProgressBar
                    style="@style/Base.Widget.AppCompat.ProgressBar"
                    android:id="@+id/loadingsubmitbtn"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />

                <TextView
                    android:id="@+id/tv_attendace_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/attendance_take"
                    android:padding="5dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_attendance_start"
                    android:text="Start"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_attendance_view"
                        android:text="View"
                        android:background="@color/colorAccent"
                        android:textColor="@android:color/white"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/attendance_view_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/attendance_view_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="View attendance report"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="gmi-calendar"/>


                    <EditText
                        android:hint="Enter Date"
                        android:id="@+id/et_attendance_view_date"
                        android:inputType="date"
                        android:layout_margin="5dp"
                        android:background="#00000000"
                        android:drawableTint="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-school"/>


                    <Spinner
                        android:id="@+id/spinner_attendance_view_class"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <ProgressBar
                    style="@style/Base.Widget.AppCompat.ProgressBar"
                    android:id="@+id/section_progress"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-source-branch"/>


                    <Spinner
                        android:id="@+id/spinner_attendance_view_sec"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/bt_attendance_view"
                    android:text="Submit"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout></android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>