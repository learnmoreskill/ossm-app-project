<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/tools">

        <android.support.v7.widget.CardView
            android:id="@+id/hw_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hw_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="Add Homeworks"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-book-open-page-variant"/>


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_hw_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_maxCharacters="25"
                        android:hint="Enter Subject"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-format-list-checks"/>


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_hw_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_maxCharacters="100"
                        android:hint="Enter Topic"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-school"/>


                    <Spinner
                        android:id="@+id/spinner_hw_class"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <ProgressBar
                    style="@style/Base.Widget.AppCompat.ProgressBar"
                    android:id="@+id/section_progress"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        app:iiv_color="@color/colorAccent"
                        app:iiv_icon="cmd-source-branch"/>


                    <Spinner
                        android:id="@+id/spinner_hw_sec"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/bt_hw_submit"
                    android:text="Submit"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    style="@style/Base.Widget.AppCompat.ProgressBar"
                    android:id="@+id/hw_submit_progress"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />



            </LinearLayout></android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>